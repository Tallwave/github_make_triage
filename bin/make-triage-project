#!/usr/bin/env ruby -W
# Copyright (c) 2017 Tallwave

$LOAD_PATH.unshift File.expand_path(File.dirname(__FILE__) + "/../lib")

require "make_triage/cli"

module MakeTriage
  class Command
    include CLI

    def about
      VERSION
    end

    def usage
      <<HERE
Download all open issues from a GitHub repository.

Usage: #{$PROGRAM_NAME} [OPTION]... [OWNER] [REPO] [TOKEN]

Example: #{$PROGRAM_NAME} swilliams issue_exporter abcdef

-h, --help        display this help and exit
    --version     display the version

HERE

    end

    def correct_number_of_args(arg_count)
      arg_count == 3
    end

    def process_input(arg, index)
      case index
      when 0
        @owner = arg
      when 1
        @repo = arg
      when 2
        @token = arg
      end
    end

    def perform_action
      builder = MakeTriage::ProjectBuilder.new(@owner, @repo, @token)
      builder.make
    end
  end
end

MakeTriage::Command.new.run
